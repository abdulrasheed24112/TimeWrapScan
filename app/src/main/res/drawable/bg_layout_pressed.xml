<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/linear_white" />
            <gradient android:angle="-90" android:startColor="@color/linear_white" android:endColor="@color/linear_white"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/linear_white" />
            <solid android:color="@color/linear_white"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/card_color" />
            <gradient android:angle="-90" android:startColor="@color/card_color" android:endColor="@color/card_color" />

        </shape>
    </item>
</selector>